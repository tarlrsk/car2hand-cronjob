{
    "name": "car2hand-cron-job",
    "version": "1.0.0",
    "description": "A TypeScript cron job that monitors Google Sheets and sends LINE notifications",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "tsc && node dist/index.js",
        "dev": "ts-node src/index.ts",
        "test": "ts-node src/test.ts",
        "watch": "tsc --watch",
        "clean": "rm -rf dist",
        "run-job": "node dist/index.js"
    },
    "keywords": [
        "cron",
        "google-sheets",
        "line",
        "typescript",
        "railway"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@line/bot-sdk": "^8.0.2",
        "axios": "^1.5.0",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "dotenv": "^16.3.1",
        "googleapis": "^128.0.0",
        "mongodb": "^6.20.0",
        "winston": "^3.18.3"
    },
    "devDependencies": {
        "@types/mongodb": "^4.0.6",
        "@types/node": "^20.8.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}

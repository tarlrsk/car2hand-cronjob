{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        }
    ],
    "functions": {
        "api/notify-overdue-stock.ts": {
            "maxDuration": 300
        },
        "api/notify-tax-deadline.ts": {
            "maxDuration": 300
        },
        "api/health.ts": {
            "maxDuration": 10
        }
    },
    "env": {
        "NODE_ENV": "production"
    }
}